    private void b1ActionPerformed(java.awt.event.ActionEvent evt) {                                   
        try
        {
        String enm,add,gen,city,pin,jod,email;
        
        enm=t1.getText();
        add=t2.getText();
        gen=String.valueOf(c1.getSelectedItem());
        city=t3.getText();
        pin=t4.getText();
        jod=t5.getText();
        email=t6.getText();
        //eid=Integer.valueOf(c2.getSelectedIndex());
        String sql;
        //id.setText(String.valueOf(c));
        c++;
        sql ="insert into Employee values('"+c+"','"+enm+"','"+add+"','"+gen+"','"+city+"','"+pin+"','"+email+"','"+jod+"')";
        ps=this.con.prepareStatement(sql);
        int x=ps.executeUpdate();
        id.setText(String.valueOf(c));
        if(x==1)
        {
              JOptionPane.showConfirmDialog(null, "Employee Added Successful!!");
              t1.setText("");
              t2.setText("");
              t3.setText("");
              t4.setText("");
              t5.setText("");
              t6.setText("");
              //t7.setText("");
        }
        else
              JOptionPane.showConfirmDialog(null, "Error!!");
         }
        catch(Exception e){
          System.out.println(e);
        }
      // TODO add your handling code here:
    }                                  

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try
        {
        String enm,add,gen,city,pin,jod,email;
        int eid;
        enm=t1.getText();
        add=t2.getText();
        gen=String.valueOf(c1.getSelectedItem());
        city=t3.getText();
        pin=t4.getText();
        jod=t5.getText();
        email=t6.getText();
        //eid=Integer.valueOf(c2.getSelectedItem());
        String sql;
        sql="select * from Employee where E_id='"+c2.getSelectedItem()+"'";
        ps=this.con.prepareStatement(sql);
        rs=ps.executeQuery();
        
        if(rs.next())
        {
          t1.setText(rs.getString(2));
          t2.setText(rs.getString(3));
          t3.setText(rs.getString(5));
          c1.setSelectedItem(rs.getString(4));
          t4.setText(rs.getString(6));
          t5.setText(rs.getString(8));
          t6.setText(rs.getString(7));
        }
        }
        catch(Exception e){}        
        // TODO add your handling code here:
    }                                        

